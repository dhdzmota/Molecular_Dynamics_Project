# REAX potential for Nitroamines system
# .....

dimension      3
boundary       p p p
units		real

atom_style	charge
read_data	indene_tridichlorobenzene3.data

replicate 3 3 3


pair_style	reax/c NULL
pair_coeff	* * ffield.reax.FC C H Cl


neighbor	2.0 bin
neigh_modify	every 10 delay 0 check no

velocity	all create 300.0 4928459

fix             2 all qeq/reax 1 0.0 10.0 1e-6 reax/c
fix		     1 all npt temp 300.0 300.0 $(20.0*dt) iso 1.0 1.0 $(500.0*dt)

timestep        0.01

thermo_style    custom step time temp pe ke etotal press vol density 
thermo          1

dump            3 all xyz 500 ./Results/dumpnpt8.xyz

run             50000
